<% layout('layouts/boilerplate') %> 

<h1 class="text-center m-3 font-monospace fw-bold">All Transactions</h1>

<table class="table table-striped table-hover table-borderless table-responsive my-3 py-3">
    <caption>Lists of transactions</caption>
    <thead class="table-dark">
      <tr>
        <th scope="col"># Transaction ID</th>
        <th scope="col">Transferred from</th>
        <th scope="col">Transferred to</th>
        <th scope="col">Amount Transferred (in â‚¹)</th>
      </tr>
    </thead>

    <% for (let transfer of transfers) { %>
        <tbody>
        <tr>
        <th scope="row"><%= transfer._id %> </th>
        <td><%= transfer.sender %> </td>
        <td><%= transfer.receiver %> </td>
        <td><%= transfer.amount %> </td>           
        </tr>
        </tbody>
    <% } %>  

</table>

<form class="d-inline" action="/">
    <button class="btn btn-primary">Home</button>
</form>

