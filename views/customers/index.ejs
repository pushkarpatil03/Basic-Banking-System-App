<% layout('layouts/boilerplate') %> 

<h1 class="text-center m-3 font-monospace fw-bold">All Customers</h1>

<table class="table table-striped table-hover table-borderless table-responsive my-3 py-3">
    <caption>Lists of Users</caption>
    <thead class="table-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Current Balance</th>
        <th scope="col">Reference</th>
      </tr>
    </thead>

    <% for (let user of users) { %>
        <tbody>
        <tr>
        <th scope="row"><%= user.Sno %> </th>
        <td><%= user.name %> </td>
        <td><%= user.email %> </td>
        <td><%= user.balance %> </td>
        <td><a href="customers/<%= user._id  %>"><button class="btn btn-info">View</button></a> </td>
       
        </tr>
        </tbody>
    <% } %>  

</table>

<form class="d-inline" action="/">
    <button class="btn btn-primary">Home</button>
</form>
